<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterData">

<ScrollView
        android:id="@+id/nestedScrollView_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="460dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/LayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/colg_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:focusedByDefault="true"
                android:fontFamily="@font/nunito_semibold"
                android:text="College Name:"
                android:textAllCaps="false"
                android:textColor="@color/textColorDark"
                android:textSize="18sp"
                 />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/colg_name_et"
                style="@style/EditTextList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/colg_name_tv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:hint="Type here"
                android:inputType="textCapWords"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:text="College Address : "
                android:textAllCaps="false"
                android:textColor="@color/textColorDark"
                android:textSize="16sp"
                android:visibility="visible"
                android:layout_below="@id/colg_name_et" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/address_Et"
                style="@style/EditTextList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_tv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:hint="Type here"
                android:inputType="textCapWords"
                android:textSize="16sp" />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cetScoretv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_Et"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:text="CET Score : "
                android:textAllCaps="false"
                android:textColor="@color/textColorDark"
                android:textSize="16sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/cetScoreEt"
                style="@style/EditTextList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cetScoretv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:hint="Type here"
                android:inputType="numberDecimal"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/feesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cetScoreEt"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:text="Fees : "
                android:textAllCaps="false"
                android:textColor="@color/textColorDark"
                android:textSize="16sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/EditTextList"
                android:id="@+id/feesEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feesTv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:hint="Type here"
                android:inputType="number"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/placementPercentageTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feesEt"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:text="Placement Percentage: "
                android:textAllCaps="false"
                android:textColor="@color/textColorDark"
                android:textSize="16sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/placementPercentageEt"
                style="@style/EditTextList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/placementPercentageTv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito"
                android:hint="Type here"
                android:inputType="numberDecimal"
                android:textSize="16sp" />

            <Button
                android:id="@+id/colgImgIdBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/placementPercentageEt"
                android:background="@color/buttonColorGreen"
                android:backgroundTint="@color/buttonColorGreen"
                android:text="Upload College Image"
                android:theme="@color/teal_200" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ImgrecyclerView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_below="@id/colgImgIdBtn"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/colgDescriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ImgrecyclerView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="College Description :"
                android:textAllCaps="false"
                android:textColor="@color/textColorDark"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/colgDescriptionEt"
                style="@style/EditTextList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/colgDescriptionTv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nunito"
                android:gravity="start|top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:scrollIndicators="right"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/progressBarId"
                style="?android:attr/progressBarStyle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:elevation="5dp"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:progressTint="@color/textColorDark"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
               android:layout_below="@+id/colgDescriptionEt"
                />

<Button

                android:id="@+id/SaveBtnId"
                style="@style/FlatButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/progressBarId"
                android:background="@color/buttonColorGreen"
                android:fontFamily="@font/nunito_semibold"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/textColorDark"
                android:textSize="16sp" />






        </RelativeLayout>

</ScrollView>>

</androidx.constraintlayout.widget.ConstraintLayout>